<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EcomerceApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/intro_2_blue</item>
    </style>
    <style name="AddToCartButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/_10sp</item>
        <item name="android:textColor">@color/intro_3_orange</item>
        <item name="backgroundTint">@color/white</item>
    </style>
    <style name="AddToCartButtonBlue" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textColor">@color/intro_2_blue</item>
        <item name="backgroundTint">@color/white</item>
    </style>
    <style name="StaticText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_15sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="ProductTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_15sp</item>
        <item name="android:textColor">@color/intro_3_orange</item>
    </style>
    <style name="ProductTitle2" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_20dp</item>
        <item name="android:textColor">@color/intro_3_orange</item>
    </style>
    <style name="ProductTitle3" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_25sp</item>
        <item name="android:textColor">@color/intro_3_orange</item>
    </style>
    <style name="CartTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

</resources>